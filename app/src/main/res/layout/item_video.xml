<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_video_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_video_cd_fm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_video_iv_fm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/tech"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/item_video_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/item_video_iv_fm"
                android:layout_alignBottom="@id/item_video_iv_fm"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/back_video_time"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="8:37"
                android:textSize="14sp"
                android:textColor="#28AACD" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_video_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_video_cd_fm"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="123"
        android:textColor="@color/text_color"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/item_video_tv_title"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/item_video_iv_usericon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/peoicon"/>
        <TextView
            android:id="@+id/item_video_tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小南瓜"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:layout_marginLeft="5dp"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/item_video_tv_usertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-03-24"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:layout_marginLeft="5dp"
            android:maxLines="1"/>
    </LinearLayout>

</RelativeLayout>